#!/bin/sh -efu

. sh-functions

verbose "Copying files from libnss_files.so* ..."

case "${1-}" in
	files)
		find_libs \
			-mindepth 1 -maxdepth 1 \
			\( \
				-name 'libnss_files.so*' -o \
				-name 'libnss_dns.so*' \
			\)
		;;
	dirs)
		DIR="$TEMPDIR/root"

		mkdir -p -- "$DIR"/etc
		cat >"$DIR"/etc/nsswitch.conf <<-EOF
			passwd:    files
			group:     files
			shadow:    files
			hosts:     files dns
			networks:  files
			rpc:       files
			services:  files
			protocols: files
		EOF

		printf '%s\n' "$DIR"
		;;
esac
