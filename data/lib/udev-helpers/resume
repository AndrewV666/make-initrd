#!/bin/udevsh

. /dev/.initramfs/env
. /scripts/functions

devresume=
add() {
	get_dev devresume "$RESUME" || return 0

	if [ ! -e /sys/power/resume ]; then
		message "Kernel does not support resume - doing normal boot"
		return 0
	fi

	set_lock init

	# hardcode path, uswsusp ships an resume binary too
	/bin/resume "$devresume"
}

add
