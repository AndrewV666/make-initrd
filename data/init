#!/bin/sh

mkdir /dev/.initramfs
/bin/showenv > /dev/.initramfs/kern

export PATH=/bin:/sbin:/usr/bin:/usr/sbin

export RUN_INITRD=1
export INIT='/sbin/init'
export QUIET=
export PANIC=
export STOP=','
export IGNORE=','
export rootmnt='/root'
export eventdir='/dev/.initramfs/udev'
export readonly=1
export RESCUE_MODULES=

[ ! -s /conf/initramfs.conf ] || . /conf/initramfs.conf
. /scripts/functions

run_scripts top

for f in /modules/*; do
	[ -x "$f" ] ||
		continue

	export m="${f#*-}"

	[ -n "${IGNORE##*,$m,*}" ] ||
		continue

	run_scripts "pre/$m"

	. "$f"
	verbose "$msg"

	[ "$STOP" != ',all,' -a -n "${STOP##*,$m,*}" ] ||
		shell "Spawning shell within the initramfs"

	run_module "$m" "$@" ||
		shell "Stage '$m' failed"

	run_scripts "post/$m"
done
