#!/bin/bash -efu

. shell-quote

. sh-functions
. guess-functions

guess_modalias()
{
	printf '%s\n' "$1"
}

in_cards()
{
	local card="$1"

	set -- ${GPUDRM_CARD_PATTERNS-}

	while [ "$#" -gt 0 ]; do
		[ -n "${card##$1}" ] ||
			return 0
		shift
	done
	return 1
}

for p in $(set +f; echo "$SYSFS_PATH"/class/drm/*); do
	[ -e "$p" ] ||
		break
	! in_cards "${p##*/}" ||
		guess_device "${p#$SYSFS_PATH}"
done
