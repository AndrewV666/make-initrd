#!/bin/sh
### BEGIN INIT INFO
# Provides:            killall
# Required-Start:      stopsys
# Should-Start:
# Required-Stop:
# Should-Stop:
# Default-Start:       0 2 6
# Default-Stop:
# Short-Description:   It kills all processes.
# Description:         It kills all processes.
# X-LFS-Provided-By:   LFS
### END INIT INFO

if [ -n "$1" -a "$1" != start ]; then
	exit 0
fi

# Source function library.
. /etc/init.d/functions

action 'Asking all remaining processes to terminate:' killall5 -15
rc=$?

[ "$rc" != 2 ] || exit 0

seq=5
if [ "$rc" = 0 ]; then
	for seq in 1 2 3 4 5; do
		killall5 -18 || break
		sleep 1
	done
fi
[ "$seq" = 5 ] || exit 0

action 'Killing all remaining processes:' killall5 -9
