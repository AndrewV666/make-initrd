#!/bin/sh

. /.initrd/initenv

[ "${RDMODE-}" != 'live' ] ||
	exit 0

. uevent-sh-functions
. shell-error

shell_inactive() {
	[ ! -d /.initrd/rdshell.lock ]
}

rootfs()
{
	if [ ! -e "$rootmnt/$INIT" ]; then
		message "Unable to mount root"
		return 1
	fi
}

mountfs()
{
	local eof fsdev fsdir dummy
	eof=
	while [ -z "$eof" ]; do
		read fsdev fsdir dummy ||
			eof=1

		[ -n "$fsdev" ] ||
			continue

		if [ -n "${ROOTONLY-}" ]; then
			[ "$fsdir" = "$rootmnt/" ] ||
				continue
		fi

		if [ ! -d "$fsdir" ]; then
			message "$fsdir: Does not exist"
			return 1
		fi

		if ! mountpoint -q "$fsdir"; then
			message "$fsdir: Not mounted"
			return 1
		fi
	done < /etc/fstab
}

shell_inactive && mountfs && rootfs ||
	exit 0
telinit 2
