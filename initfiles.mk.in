PUT_DIRS  =
PUT_FILES =

# UDEV utilities
PUT_FILES += \
	/sbin/udevd /sbin/udevadm \
	$(shell find /lib/udev -mindepth 1 -maxdepth 1 -type f -perm /+x -print)

# System utilities
PUT_FILES += \
	/sbin/modprobe \
	/sbin/reboot \
	/sbin/poweroff \
	/sbin/halt \
	/bin/ash \
	/bin/cat \
	/bin/false \
	/bin/kill \
	/bin/ln \
	/bin/ls \
	/bin/mkdir \
	/bin/mknod \
	/bin/mount \
	/bin/umount \
	/bin/readlink \
	/bin/rm \
	/bin/sleep \
	/bin/true

# System files
PUT_FILES += /etc/group /etc/passwd

# initrd specific utilities
PUT_DIRS += /lib/initrd
