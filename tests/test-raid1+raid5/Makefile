TOPDIR  ?= $(realpath $(CURDIR)/../..)
TESTDIR ?= $(TOPDIR)/.tests

TESTCASE_DISK0 = $(TESTDIR)/data/$(TESTCASE)-0.qcow2
TESTCASE_DISK1 = $(TESTDIR)/data/$(TESTCASE)-1.qcow2
TESTCASE_DISK2 = $(TESTDIR)/data/$(TESTCASE)-2.qcow2
TESTCASE_DISK3 = $(TESTDIR)/data/$(TESTCASE)-3.qcow2

TESTCASE_COMMAND = \
	$(QEMU_BIN) \
	    $(QEMU_ARGUMENTS) \
	    $(QEMU_RUNTIME_DRIVES) \
	    -kernel '$(TESTCASE_VMLINUZ)' \
	    -initrd '$(TESTCASE_INITRAMFS)' \
	    -append '$(TESTCASE_CMDLINE)'

include $(TOPDIR)/tests/Makefile.testsuite

TESTCASE_DRIVES =
TESTCASE_DRIVES += -drive 'file=$(TESTCASE_DISK0)'
TESTCASE_DRIVES += -drive 'file=$(TESTCASE_DISK1)'
TESTCASE_DRIVES += -drive 'file=$(TESTCASE_DISK2)'
TESTCASE_DRIVES += -drive 'file=$(TESTCASE_DISK3)'

QEMU_STAGE0_DRIVES  += $(TESTCASE_DRIVES)
QEMU_RUNTIME_DRIVES += $(TESTCASE_DRIVES)

$(TESTCASE_INITRAMFS):       $(TESTCASE_DISK0) $(TESTCASE_DISK1) $(TESTCASE_DISK2) $(TESTCASE_DISK3)
check: $(TESTCASE_INITRAMFS) $(TESTCASE_DISK0) $(TESTCASE_DISK1) $(TESTCASE_DISK2) $(TESTCASE_DISK3)
